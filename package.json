{
	"name": "stream-llm",
	"version": "0.0.1",
	"description": "A dependency-free TypeScript library for streaming Server-Sent Events, optimized for LLM responses",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"format": "biome format --write .",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"keywords": [
		"sse",
		"server-sent-events",
		"streaming",
		"llm",
		"ai",
		"typescript",
		"event-stream",
		"real-time"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.1.15",
		"@types/node": "^22.10.5",
		"tsup": "^8.3.5",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
